<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>


        <variable
            name="viewLoginModel"
            type="com.viewModel.UserInfoChooseViewModel" />
    </data>


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/padding_10"
            android:text="@string/plat_choose"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:id="@+id/tv_plat_choose"
            android:layout_marginTop="@dimen/margin_40"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            />

         <View
             android:layout_width="@dimen/width_60"
             android:layout_height="1dp"
             android:id="@+id/v_line_one"
             android:layout_marginTop="@dimen/padding_10"
             app:layout_constraintLeft_toLeftOf="@+id/tv_plat_choose"
             app:layout_constraintTop_toBottomOf="@+id/tv_plat_choose"
             android:background="@color/colorAccent"/>

        <View
            android:layout_width="@dimen/width_60"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/padding_10"
            app:layout_constraintLeft_toRightOf="@+id/v_line_one"
            app:layout_constraintBottom_toBottomOf="@+id/v_line_one"
            android:background="@android:color/background_dark"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fl_content_layout">

        </FrameLayout>


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/next"
            android:layout_marginBottom="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/text_size_18"/>




    </android.support.constraint.ConstraintLayout>


</layout>